{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es6",
        "module": "commonjs",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/*.ts", "src/*.json", "src/**/*.json"]
}
